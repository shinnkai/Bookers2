  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <th>name</th><th><%= user.name %></th>
            <th>inntroduction</th><th><%= user.introduction %></th>
          </tbody>
        </table>

        <div class="row">
          <%= link_to edit_user_path(user.id), class:"btn btn-outline-dark btn-block" do %>
          <span class="fas fa-user-cog"></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <h2 class="mt-3">New book</h2>

  

  <%= form_with model:book, local:true do |f| %>
    <div class="form-group">
      <div><%= f.label :title, 'Title' %></div>
      <%= f.text_field :title, class: 'fam-control'  %>
    </div>

    <div class="form-group">
      <div><%= f. label :body, 'Opinion' %></div>
      <%= f.text_area :body, class: 'fam-control' %>
    </div>

    <div><%= f.submit 'Create Book', class: 'btn btn-success' %></div>
  <% end %>
