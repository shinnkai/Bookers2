<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        
        <% if @user.errors.any? %>
          <%= @user.errors.count %>errors prohibited this book from being saved
          <% @user.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        
        <from enctype="multipart/form-data">
          <%= form_with model:@user, url:user_path, local:true do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label>
            <input class="form-control name" <%= f.text_field :name %> 
          </div>
          <div class="form-group">
            <label for="user_image">Image</label>
            <div><%= f.attachment_field :profile_image %> </div>
          </div>
          <div>
            <label for="user_introduction">Introduction</label>
            <div><%= f.text_area :introduction %></div>
          </div>
          
          <div class="form-group">
            <%= f.submit 'Update User' %>
          </div>
          <% end %>
        </from>
      </div>
    </div>
  </div>
</main>

  
